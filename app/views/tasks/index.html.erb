<!-- Index page -->
<% if notice.present? %>
  <p class="notification notification-success" id="notice">
    <%= notice %>
  </p>
<% end %>

<div class="container">
  <h1 class="page-title">Task Manager</h1>

  <%= render "form", task: @task %>

  <div id="tasks" class="task-container">
    <h1 class="section-title">Tasks</h1>

    <ul class="task-list" data-controller="tasks">
      <%= render @tasks %>
    </ul>
  </div>
</div>